{
  "name": "hello-world-express-advanced",
  "version": "0.0.1",
  "description": "Advanced express.js app in typescript, deployable on heroku :rooster: :koala: :dragon: :construction_worker:",
  "main": "index.js",
  "repository": "https://github.com/Offirmo/hello-world-express-advanced.git",
  "author": "Offirmo <offirmo.net@gmail.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "__prod": "~~~~~~ PRODUCTION ~~~~~~",
    "clean": "rm -rf dist",
    "transpile": "tsc --project meta/prod",
    "copy-other-files": "cpx 'src/**/*.{dust,css,png}' dist/src.es2019.cjs",
    "build": "npm-run-all clean --parallel transpile copy-other-files",
    "start": "node dist/src.es2019.cjs/index.js",
    "__dev": "~~~~~~ DEVELOPMENT ~~~~~~",
    "dev1": "tsc -p meta/dev --watch",
    "dev2": "npm run copy-other-files -- --watch --verbose",
    "dev": "npm-run-all clean --parallel dev1 dev2",
    "start:dev": "nodemon --delay 1 --config meta/dev/nodemon.json dist/src.es2019.cjs/index.js | ./node_modules/.bin/bunyan",
    "test": "mocha --opts node_modules/@offirmo/unit-test-toolbox/mocha.opts node_modules/@offirmo/unit-test-toolbox/mocha-chai-init-node.js 'dist/src.es2019.cjs/**/*spec.js'"
  },
  "dependencies": {
    "@offirmo/loggers-types-and-stubs": "^0.2",
    "body-parser": "^1",
    "bunyan": "^1",
    "connect-redis": "^3",
    "consolidate": "^0.15",
    "dustjs-helpers": "^1",
    "dustjs-linkedin": "^3",
    "express": "^4",
    "express-session": "^1",
    "helmet": "^3",
    "lodash": "^4",
    "mongodb": "^2",
    "morgan": "^1",
    "react": "^16",
    "react-dom": "^16",
    "simplyconfig": "^0",
    "typescript-string-enums": "^0",
    "uuid": "^8"
  },
  "devDependencies": {
    "@offirmo/unit-test-toolbox": "^6",
    "@types/body-parser": "^1",
    "@types/bunyan": "^1",
    "@types/connect-redis": "^0",
    "@types/consolidate": "^0",
    "@types/dustjs-linkedin": "^1",
    "@types/express": "^4",
    "@types/express-session": "^1",
    "@types/helmet": "^0",
    "@types/lodash": "^4",
    "@types/mongodb": "^3",
    "@types/morgan": "^1",
    "@types/node": "^14",
    "@types/react-dom": "^16",
    "@types/supertest": "^2",
    "@types/uuid": "^8",
    "cpx": "^1",
    "nodemon": "^2",
    "npm-run-all": "^4",
    "pre-commit": "^1",
    "supertest": "^2",
    "typescript": "^3"
  },
  "pre-commit": [
    "build"
  ]
}
